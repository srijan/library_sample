{
    "problemMatcher": [
        {
            "owner": "erlang-compiler",
            "severity": "error",
            "pattern": [
                {
                    "regexp": "^([^_].*):(\\d+):(.*)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            ]
        },
        {
            "owner": "erlang-xref",
            "severity": "error",
            "pattern": [
                {
                    "regexp": "^(?:===> )?(.*):(\\d+):(.*) \\(Xref\\)",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            ]
        }
    ]
}